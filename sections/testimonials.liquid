{{ 'section-testimonials.css' | asset_url | stylesheet_tag }}

<div class="testimonial-section page-width{% if section.settings.full_width %} page-width-desktop{% endif %} section-{{ section.id }}-padding">
  <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin">
    <h2 class="title {{ section.settings.heading_size }}">{{ section.settings.heading | escape }}</h2>
  </div>
  <div class="testimonial-wrapper">
    <div class="testimonial-slider">
      {%- for block in section.blocks -%}
        <div class="testimonial-item" {{ block.shopify_attributes }}>
          <div class="testimonial-content">
            <div class="testimonial-quote">{{ block.settings.quote }}</div>
            <div class="testimonial-author">
              <div class="testimonial-author-name">{{ block.settings.author_name }}</div>
              {%- if block.settings.author_info != blank -%}
                <div class="testimonial-author-info">{{ block.settings.author_info }}</div>
              {%- endif -%}
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  .testimonial-section {
    margin-top: 30px;
    margin-bottom: 30px;
  }
  
  .testimonial-wrapper {
    margin-top: 30px;
  }
  
  .testimonial-slider {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 30px;
  }
  
  .testimonial-item {
    flex: 0 0 calc(33.333% - 20px);
    min-width: 300px;
    background-color: #f9f9f9;
    border-radius: 8px;
    padding: 30px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .testimonial-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
  }
  
  .testimonial-quote {
    font-size: 16px;
    line-height: 1.6;
    margin-bottom: 20px;
    font-style: italic;
    position: relative;
  }
  
  .testimonial-quote::before {
    content: '"';
    font-size: 60px;
    color: rgba(0, 0, 0, 0.1);
    position: absolute;
    top: -20px;
    left: -15px;
  }
  
  .testimonial-author {
    display: flex;
    flex-direction: column;
  }
  
  .testimonial-author-name {
    font-weight: bold;
    margin-bottom: 5px;
  }
  
  .testimonial-author-info {
    font-size: 14px;
    color: #666;
  }
  
  @media screen and (max-width: 749px) {
    .testimonial-item {
      flex: 0 0 100%;
    }
  }
</style>

{% schema %}
{
  "name": "Testimonials",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Testimonials",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": false,
      "label": "Full width"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "scheme-1",
          "label": "Background 1"
        },
        {
          "value": "scheme-2",
          "label": "Background 2"
        },
        {
          "value": "scheme-3",
          "label": "Inverse"
        }
      ],
      "default": "scheme-1",
      "label": "Color scheme"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "default": "Add a customer testimonial to showcase your store's happy customers.",
          "label": "Quote"
        },
        {
          "type": "text",
          "id": "author_name",
          "default": "Customer Name",
          "label": "Author name"
        },
        {
          "type": "text",
          "id": "author_info",
          "default": "Lahore, Pakistan",
          "label": "Author info"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}
